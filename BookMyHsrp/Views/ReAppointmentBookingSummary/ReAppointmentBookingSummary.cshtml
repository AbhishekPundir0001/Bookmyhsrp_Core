    @section Scripts
    {
        <script>

            $(async function () {

                await BookingSummaryConfirmation();

            });
            async function BookingSummaryConfirmation() {

                var date = sessionStorage.getItem('appointmentDate').toString();
                var time = sessionStorage.getItem('timeSlot').toString();
                var data = { Date: date, SlotTime: time };
                let url = "/bookingSummary-confirmation";
                const result = await postData(url, data);
                if (result != null) {
                    var date = sessionStorage.getItem('appointmentDate');
                    var time = sessionStorage.getItem('timeSlot');
                    $('#bharatStage').text(result.BharatStage);
                    $('#appointmentDate').text(date);
                    $('#slotTime').text(time);
                    $('#registrationNumber').text(result.VehicleRegNo);
                    $('#chassisNo').text(result.ChassisNo);
                    $('#engineNo').text(result.EngineNo);
                    $('#vehicleMake').text(result.OemName);
                    $('#vehicleType').text(result.VehicleCategory);
                    $('#appointmentAddress').text(result.DealerAffixationCenterName + ' ' + result.DealerAffixationCenterAddress);

                }

            }
            $('#back').click(async function () {
                window.history.back();
            })

        </script>
    }


