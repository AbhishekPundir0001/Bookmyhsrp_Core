            var OrderNo = $('#orderno').val().toString();
            var MobileNo = $('#mobileno').val().toString();
            var EmailId = $('#emailid').val().toString();
            var Query = $('#query').val().toString();
            var CustomerName = $('#customername').val().toString();
            if (EmailId === '') {
                return errorFunc ("Please enter Email Id")
