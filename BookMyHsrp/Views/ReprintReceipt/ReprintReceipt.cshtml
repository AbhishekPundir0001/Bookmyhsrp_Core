<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <!-- Place favicon.ico in the root directory -->
    <link rel="shortcut icon" type="image/x-icon" href="Images/favicon.html">
    <link rel="apple-touch-icon" href="apple-touch-icon.html">

    <!-- All css files are included here. -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!--     <link rel="stylesheet" href="assets/css/owl.theme.default.min.css"> -->

</head>

<body>


    <main class="main-body bg-img ptb--100 main-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <div class="status-card">
                        <div class="title-area">
                            <h4 class="title">Check Receipt Validity</h4>
                        </div>
                        <div class="card-body">
                            <form action="">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-label">Order number:*</label>
                                            <input type="text" class="form-control" placeholder="DLHSRP1221XXXXX" id="orderNumber">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            <label class="form-label w-100">Captcha</label>
                                            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                                            <button class="input-group-text"><i class="fas fa-redo-alt"></i></button>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            <label class="form-label w-100">Input Captcha</label>
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <button type="button" class="submit-btn" id="downloadReceipt">
                                            Search
                                        </button>
                                        <button type="button" class="submit-btn">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>



</body>

@section Scripts
{
    <script src="~/js/owl.carousel.min.js"></script>

    <script>
        $('#downloadReceipt').click(function () {
            handleButtonClickApproved.call(this, '/Receipt/DownloadReceipt', downloadReceipt, (result) => {
                // Success callback
                // You can handle the success result here, if needed
            });
        });

        async function handleButtonClickApproved(url, downloadReceipt, isSuccessFunc) {
            debugger;
            var orderNumber = $('#orderNumber').val();

            $(this).prop('disabled', true);
            var originalButtonText = $(this).html();

            const errorFunc = (title) => {
                Toast.fire({
                    icon: 'error',
                    title: title
                });
                $(this).prop('disabled', false);
                $(this).html(originalButtonText);
            };

            const data = { OrderNo: orderNumber }
            // AJAX request to download receipt
            try {
                const response = await downloadReceipt(url, data); // Assuming you have defined postData function
                isSuccessFunc(response);
                debugger;
                console.log(response);
                const orderNo = response.OrderNo;

                var blob = new Blob([response], { type: 'application/pdf' });
                var url = window.URL.createObjectURL(blob);

                var a = document.createElement('a');
                a.href = url;
                a.download = orderNumber + '.pdf';
                document.body.appendChild(a);
                a.click();

                window.URL.revokeObjectURL(url);
            } catch (error) {
                errorFunc('Error downloading receipt.');
            }
        }

    </script>
}
